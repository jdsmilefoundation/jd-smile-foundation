  <script>
    function toggleMenu() {
      var menu = document.getElementById('sideMenu');
      if (menu.style.left === '0px') {
        menu.style.left = '-250px';
      } else {
        menu.style.left = '0px';
      }
    }

    function showQR() {
      document.getElementById('qrSection').scrollIntoView({ behavior: 'smooth' });
    }
  </script>
